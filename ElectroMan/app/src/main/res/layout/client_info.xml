<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="5dp"
        android:background="#33B5E5">
        <TextView
            android:id="@+id/ListView_City"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="City"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/listView_Name"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="5dp">
        <TextView
            android:id="@+id/ListView_Device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Device"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/Content_Device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="5dp">
        <TextView
            android:id="@+id/ListView_Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Problem_Code"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/Content_Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problem code"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <Button
        android:id="@+id/Button_Processed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:focusable="false"/>
</LinearLayout>