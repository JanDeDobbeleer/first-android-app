<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.electrodoctor.electroman.DetailActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="5dp"
        android:background="#33B5E5">
        <TextView
            android:id="@+id/Detail_Description"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Detail_Description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/Content_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="5dp"
        android:background="#33B5E5">
        <TextView
            android:id="@+id/Detail_Address"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Detail_Address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="0dp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2">
        <TextView
            android:id="@+id/Content_Street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_row="0"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/Content_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_row="0"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/Content_PostalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_row="1"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/Content_City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_row="1"
            android:layout_column="2"/>
    </GridLayout>


</LinearLayout>
